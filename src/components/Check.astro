---
import { Image } from "astro:assets";
import check from "../assets/images/icon-complete.svg";
---

<div
    id="check"
    class="hidden flex flex-col items-center justify-center w-full h-full gap-6"
>
    <div
        class="flex flex-col items-center justify-center gap-6 w-full max-w-[320px]"
    >
        <Image src={check} alt="Check" />

        <h2
            class="text-2xl font-semibold uppercase tracking-widest text-center"
        >
            Thank you!
        </h2>

        <p class="text-gray-500 text-center">We've added your card details</p>

        <button
            id="continueBtn"
            class="w-full h-10 border rounded-lg text-white bg-[var(--purple-color)] hover:cursor-pointer hover:bg-purple-950 transition-colors"
        >
            Continue
        </button>
    </div>
</div>
